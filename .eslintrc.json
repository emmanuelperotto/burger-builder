{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "eqeqeq": [
            "error",
            "smart"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/boolean-prop-naming": [
            "error",
            {
                "rule": "^(is|has)[A-Z]([A-Za-z0-9]?)+"
            }
        ],
        "react/jsx-closing-bracket-location": 1
    }
}